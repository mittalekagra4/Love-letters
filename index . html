  <script>
    function toggleMessage(index) {
      const messages = document.querySelectorAll(".message");
      messages.forEach((msg, i) => {
        if (i === index) {
          msg.classList.toggle("show");
        } else {
          msg.classList.remove("show");
        }
      });
    }
  </script>
